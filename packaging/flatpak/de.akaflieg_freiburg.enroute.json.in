{
    "app-id": "${APP_ID}",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "${PROJECT_NAME}",
    "finish-args": [
        "--device=dri",
        "--device=shm",
    	"--filesystem=host",
    	"--share=ipc",
        "--share=network",
        "--share=pulseaudio",
        "--socket=wayland",
        "--socket=x11",
        "--system-talk-name=org.freedesktop.GeoClue2",
        "--system-talk-name=org.freedesktop.NetworkManager",
        "--talk-name=org.freedesktop.Notifications",
        "--env=QT_QPA_PLATFORM=xcb"
    ],
    "modules": [
        {
            "name": "qtbase",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtbase.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DQT_BUILD_EXAMPLES_BY_DEFAULT=OFF",
                "-DQT_BUILD_TESTS_BY_DEFAULT=OFF"
            ]
        },
    	{
            "name": "qtsvg",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtsvg.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ]
        },
        {
            "name": "qttools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qttools.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DQT_BUILD_EXAMPLES_BY_DEFAULT=OFF",
                "-DQT_BUILD_TESTS_BY_DEFAULT=OFF",
                "-DFEATURE_assistant=ON",
                "-DFEATURE_clang=OFF",
                "-DFEATURE_clangcpp=OFF",
                "-DFEATURE_designer=ON",
                "-DFEATURE_distancefieldgenerator=OFF",
                "-DFEATURE_kmap2qmap=OFF",
                "-DFEATURE_macdeployqt=OFF",
                "-DFEATURE_pixeltool=OFF",
                "-DFEATURE_pkg_config=OFF",
                "-DFEATURE_qdbus=OFF",
                "-DFEATURE_qev=OFF",
                "-DFEATURE_qtattributionsscanner=OFF",
                "-DFEATURE_qtdiag=OFF",
                "-DFEATURE_qtplugininfo=OFF",
                "-DFEATURE_windeployqt=OFF"
            ]
        },
        {
            "name": "qtshadertools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtshadertools.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ]
        },
        {
            "name": "qtdeclarative",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtdeclarative.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DQT_BUILD_EXAMPLES_BY_DEFAULT=OFF",
                "-DQT_BUILD_TESTS_BY_DEFAULT=OFF",
                "-DFEATURE_qml_debug=OFF"
           ]
        },
    	{
            "name": "qtmultimedia",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtmultimedia.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ]
        },
    	{
            "name": "flite",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/festvox/flite.git",
                    "tag": "v2.2"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "./configure --prefix=/app --with-pic",
                "make",
                "make install"
            ]
        },
    	{
            "name": "qtspeech",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtspeech.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ]
        },
        {
            "name": "qt5compat",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qt5compat.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "name": "qtpositioning",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtpositioning.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "name": "qtlocation",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Akaflieg-Freiburg/qtlocationstatic.git",
                    "commit": "7533d6c"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "name": "qttranslations",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qttranslations.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "name": "qtimageformats",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtimageformats.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "name": "qthttpserver",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qthttpserver.git",
                    "tag": "v${Qt6_VERSION}"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "name": "enroute",
            "buildsystem": "cmake-ninja",
            "config-opts": [
		"-DCMAKE_BUILD_TYPE=RelWithDebInfo"
	    ],
            "sources": [
                {
		    "type": "git",
                    "url": "https://github.com/Akaflieg-Freiburg/enroute.git",
		    "commit": "${GIT_COMMIT}"
                }
            ],
	    "post-install": [
		"mkdir -p /app/usr/share/icons",
		"cp /app/share/icons/hicolor/scalable/apps/de.akaflieg_freiburg.enroute.svg /app/usr/share/icons/de.akaflieg_freiburg.enroute.svg"
	    ]
        }
    ]
}
