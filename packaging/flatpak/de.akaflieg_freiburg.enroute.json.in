{
    "app-id": "de.akaflieg_freiburg.enroute",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "enroute",
    "finish-args": [
        "--share=ipc",
	"--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "flatpak-xdg-utils",
            "buildsystem": "meson",
            "config-opts": ["-DCMAKE_BUILD_TYPE=RelWithDebInfo"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/flatpak-xdg-utils.git",
                    "commit": "4fdd2e2bdbafdcc246e1570069df1da3c8c14742"
                }
            ]
        },
        {
            "name": "enroute flight navigation",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_BUILD_TYPE=RelWithDebInfo"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Akaflieg-Freiburg/enroute.git",
                    "commit": "${GIT_COMMIT}"
                }
            ]
        }
    ]
}
